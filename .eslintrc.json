{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "prettier/prettier":["error",{"endOfLine":"auto"}],
        "react/react-in-jsx-scope":"off",
        "import/order":["error",{
            "groups":[
                "external",
                "index",
                "builtin",
                "sibling",
                "parent",
                "internal",
                "unknown"
            ],
            "newlines-between":"always",
            "alphabetize": {
                "order": "asc", 
                "caseInsensitive": true
              }
        }]
    }
}
